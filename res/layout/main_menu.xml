<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background" >

    <EditText
        android:id="@+id/main_menu_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/menu_title_margin_top"
        android:background="@null"
        android:cursorVisible="true"
        android:gravity="center"
        android:text="@string/menu_title"
        android:textColor="@color/typer_color_green"
        android:textCursorDrawable="@drawable/title_cursor"
        android:textSize="@dimen/menu_title_text_size" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/menu_title_margin_top"
        android:background="@android:color/transparent"
        android:clickable="true" />

    <Button
        android:id="@+id/menu_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_states"
        android:padding="20dp"
        android:text="@string/menu_start"
        android:textColor="@color/typer_color_green" >
    </Button>


</RelativeLayout>