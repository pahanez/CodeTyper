<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_background" 
    android:layout_margin="20dp"
    android:paddingBottom="20dp"
    >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:text="@string/dialog_choose_speed"
        android:textColor="@color/typer_color_green"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SeekBar
        android:id="@+id/speed_dialog_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:thumb="@drawable/seed_thumb"
        android:layout_below="@+id/textView1"
        android:progressDrawable="@drawable/seek_progress_background"
        android:max="19"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/speed_dialog_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed_dialog_sb"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/button_states"
        android:textColor="@color/typer_color_green"
        android:layout_marginTop="15dp"
        android:text="@string/ok" />

</RelativeLayout>
